Question 3. part 1
#include<iostream>
using namespace std;
int checkEven(int);
int checkEven(int a){
     int i;
     i = a%2==0;
     return i;
}

int main()
{
    bool even;
    int num;
    cout<<"Input num";
    cin>>num;
    even = checkEven(num);
    
    if (even == true){
    cout<< "Even Number";
    }
    else
    cout<<"Odd Number";
}

part 2

#include<iostream>
using namespace std;
int max(int, int, int);
int max(int a, int b, int c){
    if(a>b and a>c){
        return a;
    }
    else if(b>a and b>c){
        return b;
    }    
    else{
        return c;
    }
    }


int main()
{
    int num1,num2,num3,maximum;
    cout<<"Input three numbers";
    cin>>num1>>num2>>num3;
    
    maximum=max(num1,num2,num3);
    cout<<"maximum number is "<<maximum;
    
}


Question 4. part 2
a) using namespace std; - outermost namespace scope where functions are defined.
b) int main(){
    int num =0 // local scope - variable defined inside a function
    }
c) int sum(int, int); - declaring a function
d) float average(int x, int y){
    int x = 0; 
    int y = 1;  // function scope - variable declared inside a function is only accessible within the function
    }
